{
  "eslint.autoFixOnSave": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown",
    "html"
  ],

  "vetur.completion.autoImport": true,
  "vetur.format.enable": true,
  "eslint.format.enable": false,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "markdown",
    "vue",
    "json"
  ],
  "coc.preferences.formatOnTypeFiletypes": [
    "javascript",
    "typescript",
    "markdown",
    "vue",
    "json"
  ],
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.level": "hint",
  "diagnostic.showDeprecated": true,
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.formatters": {
    "prettier": {
      "command": "prettier",
      "args": ["--stdin-filepath", "%filepath"],
      "rootPatterns": [
        ".prettierrc",
        ".prettierrc.json",
        ".prettierrc.toml",
        ".prettierrc.json",
        ".prettierrc.yml",
        ".prettierrc.yaml",
        ".prettierrc.json5",
        ".prettierrc.js",
        ".prettierrc.cjs",
        "prettier.config.js",
        "prettier.config.cjs"
      ]
    },
    "prettier_eslint": {
      "command": "prettier-eslint",
      "args": ["--stdin"],
      "rootPatterns": [".git"]
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "json": "prettier",
    "typescript": "prettier",
    "vue": "prettier"
  }
}
